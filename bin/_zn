#!/usr/bin/env node

var path = require('path');
var argv = process.argv;
require('../src/zn');

if (argv.length >= 3) {
    var dir = path.join(process.cwd(), path.dirname(argv[2]));
    var file = path.join(dir, path.basename(argv[2]));
    if(__dirname.lastIndexOf('/')===-1){
        file = file.replace(/\\/g,"/");
    }
    zn.load(file);
}
else{
    console.log('ZN v' + zn.VERSION);
}
